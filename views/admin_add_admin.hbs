<main class="content">
	<div class="container-fluid p-0">

		<div class="mb-3">
			<h1 class="h3 d-inline align-middle">Admin qo'shish</h1>
		</div>
		<div class="row">
			<div>
				<div class="card">
					<div class="card-header">
						<h5 class="card-title mb-0">Admin ma'lumotari</h5>
					</div>
					<form action="/admin-add?_csrf={{csrfToken}}" method="post">
						<div class="card-body">
							<label for="label" class="form-label">To'liq ismini kiriting:</label>
							<input type="text" name="fullname" class="form-control" placeholder="Ism">
							<label for="label" class="form-label pt-3">Lavozimini kiriting:</label>
							<input type="text" name="position" class="form-control" placeholder="Lavozim">
							<label for="label" class="form-label pt-3">Telefon raqam:</label>
							<input type="number" name="phonenumber" class="form-control" placeholder="Raqam" value="998">
							<label for="label" class="form-label pt-3">Parol kiriting:</label>
							<input type="text" name="password" class="form-control" placeholder="Parol">
							<label for="label" class="form-label pt-3">Holatini tanlang:</label>
							<select name="status" class="form-select mb-3">
								<option value="1">Faol</option>
								<option value="2">No Faol</option>
								<option value="0">Bloklash</option>
							</select>
							<button type="submit" class="btn btn-primary ">Qo'shish</button>
						</div>
					</form>
				</div>
			</div>

		</div>
</main>